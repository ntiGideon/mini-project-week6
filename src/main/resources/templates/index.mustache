{{<base}}
    {{$title}}Photo Gallery{{/title}}
    {{$content}}

            <!-- Featured Carousel -->

            <div class="featured-carousel-wrapper">
                <div class="featured-carousel">
                    {{#featuredImages}}
                        <div class="carousel-item" style="background-image: url('{{s3Url}}')">
                            <div class="carousel-content">
                                <h3 class="carousel-title">{{name}}</h3>
                                <p class="carousel-description">{{description}}</p>
                                <a href="/images/{{id}}" class="carousel-button">View Details</a>
                            </div>
                            <div class="carousel-overlay"></div>
                        </div>
                    {{/featuredImages}}
                </div>

                <div class="carousel-controls">
                    <button class="carousel-prev">
                        <i class="fas fa-chevron-left"></i>
                    </button>
                    <div class="carousel-dots"></div>
                    <button class="carousel-next">
                        <i class="fas fa-chevron-right"></i>
                    </button>
                </div>
            </div>


        <section class="section px-4">
            <div class="container">




                <div class="has-text-centered mb-6">
                    <h1 class="title is-1 has-text-weight-bold has-text-primary">Visual Showcase</h1>
                    <h2 class="subtitle is-4 has-text-white">Discover our stunning collection</h2>
                    <div class="divider is-primary"></div>
                </div>

                <!-- Image Grid -->
                <div class="columns is-centered is-multiline is-variable is-5">
                    {{#images}}
                        <div class="column is-4-desktop is-6-tablet">
                            <div class="card gallery-card has-background-dark">
                                <div class="card-image">
                                    <figure class="image is-square">
                                        <img src="{{s3Url}}" alt="{{name}}" class="gallery-image">
                                        <div class="image-overlay"></div>
                                    </figure>
                                </div>
                                <div class="card-content p-4">
                                    <div class="media">
                                        <div class="media-content">
                                            <p class="title is-4 has-text-white has-text-centered mb-2 pb-2">{{name}}</p>
                                            <p class="subtitle is-6 has-text-grey-light has-text-centered">
                                                <span class="icon">
                                                    <i class="fas fa-calendar-alt"></i>
                                                </span>
                                                <span>{{createdAt}}</span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <footer class="card-footer has-background-black">
                                    <a href="/images/{{id}}" class="card-footer-item has-text-info">
                                        <span class="icon">
                                            <i class="fas fa-expand"></i>
                                        </span>
                                        <span>View</span>
                                    </a>
                                    <a href="{{s3Url}}" class="card-footer-item has-text-success" download>
                                        <span class="icon">
                                            <i class="fas fa-download"></i>
                                        </span>
                                        <span>Download</span>
                                    </a>
                                </footer>
                            </div>
                        </div>
                    {{/images}}
                </div>

                <!-- Pagination -->
                {{#totalPages}}
                    <nav class="pagination is-rounded is-centered mt-6" role="navigation" aria-label="pagination">
                        <a href="/?page={{prevPage}}" class="pagination-previous has-background-primary has-text-white" {{^hasPrev}}disabled{{/hasPrev}}>
                        <span class="icon">
                                <i class="fas fa-chevron-left"></i>
                            </span>
                        </a>
                        <a href="/?page={{nextPage}}" class="pagination-next has-background-primary has-text-white" {{^hasNext}}disabled{{/hasNext}}>
                        <span class="icon">
                                <i class="fas fa-chevron-right"></i>
                            </span>
                        </a>

                        <ul class="pagination-list">
                            {{#pageNumbers}}
                                <li>
                                    <a href="/?page={{.}}" class="pagination-link {{#current}}is-current has-background-primary{{/current}} has-text-white" aria-label="Page {{.}}">
                                    {{.}}
                                    </a>
                                </li>
                            {{/pageNumbers}}
                        </ul>
                    </nav>
                {{/totalPages}}

                <div class="has-text-centered mt-5">
                    <p class="has-text-grey-light">Displaying <span class="has-text-weight-semibold has-text-white">{{firstItem}}-{{lastItem}}</span> of <span class="has-text-weight-semibold has-text-white">{{totalItems}}</span> masterpieces</p>
                </div>
            </div>
        </section>

        <style>
            :root {
                /* Primary Colors */
                --dark-green: #1a3a1a;
                --green: #2d5a2d;
                --light-green: #3d7a3d;

                /* Neutral Colors */
                --black: #121212;
                --dark-gray: #222;
                --white: #ffffff;

                /* Accents */
                --accent-green: #4CAF50;


                --text-dark: var(--black);
                --text-light: var(--white);
                --text-green: var(--light-green);
            }


            body {
                background-color: var(--black);
                color: var(--white);
            }
            /* Custom Gallery Styles */
            .gallery-card {
                border-radius: 12px;
                overflow: hidden;
                box-shadow: 0 10px 20px rgba(0,0,0,0.3);
                transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
                height: 100%;
                display: flex;
                flex-direction: column;
                background: linear-gradient(145deg, var(--dark), var(--darker));
                border: 1px solid rgba(255,255,255,0.1);
            }

            .gallery-card:hover {
                transform: translateY(-10px) scale(1.02);
                box-shadow: 0 15px 30px rgba(0,0,0,0.4);
                border-color: var(--primary);
            }




            /* Carousel Styles */
            .featured-carousel-wrapper {
                position: relative;
                margin: 3rem 0;
                border-radius: 16px;
                overflow: hidden;
                box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            }

            .featured-carousel {
                display: flex;
                height: 70vh;
                min-height: 500px;
                max-height: 800px;
                transition: transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
            }

            .carousel-item {
                flex: 0 0 100%;
                position: relative;
                background-size: cover;
                background-position: center;
                background-repeat: no-repeat;
                display: flex;
                align-items: flex-end;
                padding: 4rem;
                isolation: isolate;
            }

            .carousel-overlay {
                position: absolute;
                inset: 0;
                background: linear-gradient(to top, rgba(0,0,0,0.9) 0%, transparent 50%);
                z-index: -1;
                opacity: 0.8;
            }

            .carousel-content {
                max-width: 800px;
                transform: translateY(50px);
                opacity: 0;
                transition: all 0.8s cubic-bezier(0.16, 1, 0.3, 1);
                transition-delay: 0.3s;
            }

            .carousel-item.active .carousel-content {
                transform: translateY(0);
                opacity: 1;
            }

            .carousel-title {
                font-size: 3rem;
                font-weight: 800;
                color: white;
                margin-bottom: 1rem;
                line-height: 1.2;
                text-shadow: 0 2px 4px rgba(0,0,0,0.5);
            }

            .carousel-description {
                font-size: 1.25rem;
                color: rgba(255,255,255,0.9);
                margin-bottom: 2rem;
                text-shadow: 0 1px 2px rgba(0,0,0,0.5);
            }

            .carousel-button {
                display: inline-flex;
                align-items: center;
                padding: 0.75rem 1.5rem;
                background-color: #2d5a2d;
                color: white;
                border-radius: 50px;
                font-weight: 600;
                text-decoration: none;
                transition: all 0.3s ease;
                box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            }

            .carousel-button:hover {
                background-color: #3d7a3d;
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(0,0,0,0.15);
            }

            .carousel-controls {
                position: absolute;
                bottom: 2rem;
                left: 0;
                right: 0;
                display: flex;
                justify-content: center;
                align-items: center;
                gap: 1rem;
                z-index: 10;
            }

            .carousel-prev,
            .carousel-next {
                width: 50px;
                height: 50px;
                border-radius: 50%;
                background-color: rgba(255,255,255,0.2);
                border: none;
                color: white;
                display: flex;
                align-items: center;
                justify-content: center;
                cursor: pointer;
                transition: all 0.3s ease;
                backdrop-filter: blur(5px);
            }

            .carousel-prev:hover,
            .carousel-next:hover {
                background-color: rgba(255,255,255,0.3);
                transform: scale(1.1);
            }

            .featured-carousel {
                width: 100%;
                position: relative;
                overflow: hidden;
            }

            .carousel-item {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                opacity: 0;
                transition: opacity 0.5s ease;
            }

            .carousel-item.active {
                opacity: 1;
                position: relative;
            }

            .featured-carousel-wrapper {
                position: relative;
                width: 100%;
            }

            .carousel-dots {
                display: flex;
                gap: 0.5rem;
            }

            .carousel-dot {
                width: 12px;
                height: 12px;
                border-radius: 50%;
                background-color: rgba(255,255,255,0.3);
                cursor: pointer;
                transition: all 0.3s ease;
            }

            .carousel-dot.active {
                background-color: white;
                transform: scale(1.2);
            }

            /* 3D Perspective Effect */
            .featured-carousel-wrapper {
                perspective: 1000px;
            }

            .carousel-item {
                transform-style: preserve-3d;
                transform: rotateY(15deg) scale(0.9);
                opacity: 0.7;
                transition: all 0.8s cubic-bezier(0.16, 1, 0.3, 1);
                filter: brightness(0.7);
            }

            .carousel-item.active {
                transform: rotateY(0) scale(1);
                opacity: 1;
                filter: brightness(1);
                z-index: 1;
            }

            .carousel-item.prev {
                transform: rotateY(-15deg) scale(0.9);
            }

            /* Responsive Design */
            @media (max-width: 1024px) {
                .carousel-title {
                    font-size: 2.5rem;
                }

                .carousel-description {
                    font-size: 1.1rem;
                }

                .featured-carousel {
                    height: 60vh;
                }
            }

            @media (max-width: 768px) {
                .carousel-title {
                    font-size: 2rem;
                }

                .carousel-content {
                    padding: 0 1rem;
                }

                .featured-carousel {
                    height: 50vh;
                    min-height: 400px;
                }

                .carousel-item {
                    padding: 2rem;
                }
            }




            .image-overlay {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: linear-gradient(to top, rgba(0,0,0,0.7) 0%, transparent 50%);
                opacity: 0.7;
                transition: opacity 0.3s ease;
            }

            .gallery-card:hover .image-overlay {
                opacity: 0.5;
            }

            .gallery-image {
                object-fit: cover;
                width: 100%;
                height: 100%;
                transition: transform 0.8s ease;
            }

            .gallery-card:hover .gallery-image {
                transform: scale(1.1);
            }

            .card-footer {
                border-top: 1px solid rgba(255,255,255,0.1);
                background: rgba(0,0,0,0.3) !important;
            }

            .card-footer-item {
                transition: all 0.3s ease;
                color: var(--light);
            }

            .card-footer-item:hover {
                background-color: rgba(255,255,255,0.1) !important;
                color: white !important;
            }

            .divider {
                height: 4px;
                width: 80px;
                background: var(--primary);
                margin: 1.5rem auto;
                border-radius: 2px;
            }

            /* Responsive adjustments */
            @media screen and (max-width: 1023px) {
                .columns.is-variable.is-5 {
                    --columnGap: 1.5rem;
                }

                .column.is-6-tablet {
                    width: 50%;
                    padding: 0.75rem;
                }
            }

            @media screen and (max-width: 768px) {
                .column.is-6-tablet {
                    width: 100%;
                    max-width: 400px;
                    margin: 0 auto 1.5rem;
                }

                .card-content {
                    padding: 1.25rem !important;
                }

                .title.is-4 {
                    font-size: 1.25rem !important;
                }
            }

            /* Animation */
            @keyframes fadeIn {
                from { opacity: 0; transform: translateY(20px); }
                to { opacity: 1; transform: translateY(0); }
            }

            .gallery-card {
                animation: fadeIn 0.6s ease forwards;
            }

            .gallery-card:nth-child(odd) {
                animation-delay: 0.1s;
            }

            .gallery-card:nth-child(even) {
                animation-delay: 0.2s;
            }
        </style>
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const carousel = document.querySelector('.featured-carousel');
                if (!carousel) return;

                const items = document.querySelectorAll('.carousel-item');
                if (items.length === 0) return;

                const dotsContainer = document.querySelector('.carousel-dots');
                const prevBtn = document.querySelector('.carousel-prev');
                const nextBtn = document.querySelector('.carousel-next');

                let currentIndex = 0;
                let intervalId;

                // Create dots
                items.forEach((_, index) => {
                    const dot = document.createElement('div');
                    dot.classList.add('carousel-dot');
                    if (index === 0) dot.classList.add('active');
                    dot.addEventListener('click', () => goToSlide(index));
                    dotsContainer.appendChild(dot);
                });

                // Initialize first item
                items[0].classList.add('active');

                function updateCarousel() {
                    items.forEach((item, index) => {
                        item.classList.remove('active', 'prev');

                        if (index === currentIndex) {
                            item.classList.add('active');
                        } else if (index < currentIndex) {
                            item.classList.add('prev');
                        }
                    });

                    // Update dots
                    const dots = document.querySelectorAll('.carousel-dot');
                    dots.forEach((dot, i) => {
                        dot.classList.toggle('active', i === currentIndex);
                    });
                }

                function goToSlide(index) {
                    currentIndex = index;
                    updateCarousel();

                    // Reset auto-rotate timer
                    clearInterval(intervalId);
                    startAutoRotate();
                }

                function startAutoRotate() {
                    intervalId = setInterval(() => {
                        currentIndex = (currentIndex + 1) % items.length;
                        updateCarousel();
                    }, 6000);
                }

                // Navigation
                prevBtn.addEventListener('click', () => {
                    currentIndex = (currentIndex - 1 + items.length) % items.length;
                    updateCarousel();
                });

                nextBtn.addEventListener('click', () => {
                    currentIndex = (currentIndex + 1) % items.length;
                    updateCarousel();
                });

                // Keyboard navigation
                document.addEventListener('keydown', (e) => {
                    if (e.key === 'ArrowLeft') {
                        currentIndex = (currentIndex - 1 + items.length) % items.length;
                        updateCarousel();
                    } else if (e.key === 'ArrowRight') {
                        currentIndex = (currentIndex + 1) % items.length;
                        updateCarousel();
                    }
                });

                // Touch support
                let touchStartX = 0;
                let touchEndX = 0;

                carousel.addEventListener('touchstart', (e) => {
                    touchStartX = e.changedTouches[0].screenX;
                }, {passive: true});

                carousel.addEventListener('touchend', (e) => {
                    touchEndX = e.changedTouches[0].screenX;
                    handleSwipe();
                }, {passive: true});

                function handleSwipe() {
                    if (touchEndX < touchStartX - 50) {
                        currentIndex = (currentIndex + 1) % items.length;
                        updateCarousel();
                    }

                    if (touchEndX > touchStartX + 50) {
                        currentIndex = (currentIndex - 1 + items.length) % items.length;
                        updateCarousel();
                    }
                }

                // Start auto-rotation
                startAutoRotate();

                // Pause on hover
                carousel.addEventListener('mouseenter', () => {
                    clearInterval(intervalId);
                });

                carousel.addEventListener('mouseleave', startAutoRotate);
            });
        </script>
    {{/content}}
{{/base}}